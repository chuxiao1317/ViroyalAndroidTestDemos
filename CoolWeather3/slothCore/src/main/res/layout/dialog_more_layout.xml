<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/more_dialog_bg"
              android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/more_title_dialog_bg"
        android:gravity="center|left">
        <TextView
            android:id="@+id/dialog_custom_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            style="@style/dialog_custom_title_text_style"
            android:layout_marginLeft="19dp"
            android:gravity="center"
            android:textColor="@color/c1"
            android:text="Android App"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/color27">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/more_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color27"
            android:fadingEdge="none" />
    </LinearLayout>

</LinearLayout>